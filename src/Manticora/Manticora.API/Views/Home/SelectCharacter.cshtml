@model Manticora.Domain.Entities.CharacterPage

@{
    ViewData["Title"] = "Seleccionar Personaje";
}

<h2>Seleccionar Personaje</h2>

<!-- Filtro por nombre -->
<form asp-action="SelectCharacter" method="get" class="form-inline mb-4">
    <div class="form-group">
        <input type="text" name="name" class="form-control mr-2" placeholder="Filtrar por nombre" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<!-- Tabla de personajes -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Especie</th>
            <th>Tipo</th>
            <th>Género</th>
            <th>Imagen</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var character in Model.Characters)
        {
            <tr>
                <td>@character.CharacterId</td>
                <td>@character.Name</td>
                <td>@character.Species</td>
                <td>@character.Type</td>
                <td>@character.Gender</td>
                <td><img src="@character.Image" alt="@character.Name" class="img-thumbnail" style="width: 100px; height: auto;" /></td>
                <td>
                    <a href="@Url.Action("CharacterDetails", new { id = character.CharacterId })" class="btn btn-info btn-sm">Ver Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("SelectCharacter", new { page = Model.CurrentPage - 1 })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("SelectCharacter", new { page = i })">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("SelectCharacter", new { page = Model.CurrentPage + 1 })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>
